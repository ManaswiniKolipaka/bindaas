<project name="bindaas-commons-mail" default="copyProject">
	
	
    <description>
            Copy project to do maven build
    </description>

	<property name="project.home" value="../../../projects/core/bindaas-commons-mail"></property>
	<property name="build.src" value="src/main/java"></property>
	<property name="build.resources" value="src/main/resources"></property>
	<property name="dist.placeholder.dir" value="../dist"></property>
    <!-- ================================= 
          target: copyProject              
         ================================= -->
    <target name="copyProject" depends="clean" description="Copy project to do maven build">
        <copy todir="${build.src}">
        	<fileset dir="${project.home}/src">
        		<include name="**/*"/>
        	</fileset>
        </copy>
    	
    	<copy todir="${build.resources}">
    		<fileset dir="${project.home}">
    			<exclude name="**/src/" />
    			<exclude name="**/bin/"/>
    		</fileset>
    	</copy>
    </target>

    <!-- - - - - - - - - - - - - - - - - - 
          target: clean                      
         - - - - - - - - - - - - - - - - - -->
    <target name="clean">
    	<delete verbose="true" dir="${build.src}" />
    	<delete verbose="true" dir="${build.resources}" />
    	<mkdir dir="${build.src}"/>
    	<mkdir dir="${build.resources}"/>
    	
    </target>
	
	<target name="dist">
			<copy todir="${dist.placeholder.dir}/dependencies">
				<fileset dir="target">
					<include name="*.jar"/>
				</fileset>
			</copy>
		</target>
	<target name="deploy"></target>

</project>
